{
    "manifest_version": 3,
    "name": "Your Extension Name",
    "version": "1.0",
    "description": "Your extension description here.",
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "notifications"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*",
        "https://mycareermax.azurewebsites.net/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        },
        "default_title": "MagicMax",
        "default_width": 400,
        "default_height": 300
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}