{
    "manifest_version": 3,
    "name": "Job Application Auto-filler",
    "version": "1.0",
    "description": "Automatically fill out job application forms using ChatGPT.",
    "permissions": [
        "storage",
        "contextMenus",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:5000/",
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}